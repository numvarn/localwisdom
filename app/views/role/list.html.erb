<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td>
                    <% user.roles.each do |role| %>
                        <%= role.name %>&nbsp;
                    <% end %>
                </td>
                <td>
                    <%= link_to 'edit', role_show_path(id: user.id) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
